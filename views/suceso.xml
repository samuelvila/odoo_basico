<odoo>
  <data>

    <record model="ir.actions.act_window" id="suceso_list_action">
      <field name="name">A acci√≥n de ola mundo</field>
      <!--O que se visualiza na parte superior esquerda-->
      <field name="res_model">odoo_basico.suceso</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Tes que crear o primeiro rexistro</p>
      </field>
    </record>

     <record model="ir.ui.view" id="suceso_tree_view">
       <field name="name">suceso.tree</field>
       <field name="model">odoo_basico.suceso</field>
       <field name="arch" type="xml">
         <tree string="suceso Tree" editable ="top" decoration-success="nivel == 'Bajo'" decoration-warning="nivel == 'Medio'" decoration-danger="nivel == 'Alto'">
           <field name="name"/>
           <field name="description"/>
           <field name="nivel"/>
           <field name="data_hora"/>
         </tree>
       </field>
     </record>

    <record model="ir.ui.view" id="suceso_search_view">
      <field name="name">suceso.tree</field>
      <field name="model">odoo_basico.suceso</field>
      <field name="arch" type="xml">
        <search>
          <field name="nivel"/>
        </search>
      </field>
    </record>
  </data>
</odoo>